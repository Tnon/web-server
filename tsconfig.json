{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "pretty": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "checkJs": false,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "removeComments": false,
        "strictFunctionTypes": false,
        "baseUrl": ".",
        "types": [
            "vite/client",
            "node"
        ],
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}